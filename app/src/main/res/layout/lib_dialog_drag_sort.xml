<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_tv_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="dialog_title"
        />

    <com.dotawang.mvpperfectworld.utils.custom.dragWidget.DragGridView
        android:id="@+id/dialog_dgv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/dialog_tv_division"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:text="dialog_division"
        />

    <com.dotawang.mvpperfectworld.utils.custom.dragWidget.DragGridView
        android:id="@+id/dialog_dgv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>